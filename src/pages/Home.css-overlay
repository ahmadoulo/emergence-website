.frame-overlay-v2 {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(15, 23, 42, 0.4);
  backdrop-filter: blur(4px);
}

.overlay-text {
  font-family: var(--font-heading);
  font-weight: 800;
  font-size: 2rem;
  color: var(--accent-secondary);
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}
